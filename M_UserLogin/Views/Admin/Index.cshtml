@model IEnumerable<M_UserLogin.Models.Users>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    body {
        background: linear-gradient(135deg, #1e1e2f, #252540, #12121c);
        color: #f0f0f0;
        font-family: 'Segoe UI', sans-serif;
        min-height: 100vh;
    }

    .admin-dashboard {
        max-width: 1200px;
        margin: 40px auto;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 16px;
        padding: 30px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
    }

    h2 {
        text-align: center;
        color: #ffc107;
        font-weight: 600;
    }

    .table {
        color: #f8f9fa;
        background-color: rgba(255, 255, 255, 0.05);
    }

    .table th {
        background-color: #ffc107;
        color: #000;
    }

    .btn {
        border-radius: 8px;
        transition: 0.3s;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
    }

    .btn-success:hover {
        background-color: #218838;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .alert-success {
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 8px;
    }

    .text-muted {
        color: #ccc !important;
    }
</style>

<div class="admin-dashboard">
    <h2 class="mb-3">⚙️ Admin Dashboard</h2>
    <p class="text-center text-muted">Manage users, roles, and permissions.</p>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["Message"]
        </div>
    }

    <table class="table table-bordered table-striped mt-4">
        <thead class="text-center">
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Assign Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>
                        @{
                            var rolesForUser = (ViewBag.UserRoles as List<(M_UserLogin.Models.Users User, IList<string> Roles)>)
                                               ?.FirstOrDefault(u => u.User.Id == user.Id)
                                               .Roles;
                        }
                        @if (rolesForUser != null && rolesForUser.Any())
                        {
                            @string.Join(", ", rolesForUser)
                        }
                        else
                        {
                            <span class="text-muted">No roles assigned</span>
                        }
                    </td>
                    <td>
                        <form asp-action="AssignRole" method="post" class="d-flex justify-content-center mb-2">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <input type="text" name="role" placeholder="Enter role..." class="form-control w-50 me-2" required />
                            <button type="submit" class="btn btn-sm btn-success">Assign</button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="DeleteUser" method="post">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
