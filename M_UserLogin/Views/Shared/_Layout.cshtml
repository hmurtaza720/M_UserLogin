<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EMS</title>

    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/lux/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            background: linear-gradient(135deg, #1e1e2f, #252540, #12121c);
            color: #f8f9fa;
            font-family: 'Segoe UI', sans-serif;
            min-height: 100vh;
        }

        .navbar, footer {
            background-color: rgba(255, 255, 255, 0.05) !important;
        }

        .nav-link, .navbar-brand {
            color: #ffc107 !important;
            font-weight: 600;
        }

            .nav-link:hover {
                color: #ffda47 !important;
                text-shadow: 0 0 8px #ffc107;
            }

        main, .container, .card, .table {
            color: #fff !important;
        }

        h1, h2, h3, h4, h5, h6, label, p, span, th, td {
            color: #fff !important;
        }

        ::placeholder {
            color: #ccc !important;
        }

        input.form-control, select.form-select, textarea.form-control {
            background: rgba(255, 255, 255, 0.1) !important;
            color: #fff !important;
            border: 1px solid rgba(255, 255, 255, 0.2) !important;
        }

            input.form-control:focus, select.form-select:focus {
                border-color: #ffc107 !important;
                box-shadow: 0 0 8px #ffc107 !important;
            }

        .btn-primary {
            background-color: #ffc107 !important;
            border: none !important;
            color: #1e1e2f !important;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #ffda47 !important;
                transform: translateY(-2px);
                box-shadow: 0 0 10px #ffc107;
            }

        .card {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 15px;
            border: 1px solid rgba(255, 255, 255, 0.15);
            box-shadow: 0 0 10px rgba(255, 193, 7, 0.1);
        }

        .alert {
            color: #fff !important;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .alert-success {
            background-color: rgba(40, 167, 69, 0.3) !important;
        }

        .alert-danger {
            background-color: rgba(220, 53, 69, 0.3) !important;
        }

        .alert-warning {
            background-color: rgba(255, 193, 7, 0.3) !important;
        }

        table {
            color: #fff !important;
        }

        thead th {
            background: rgba(255, 193, 7, 0.15);
            color: #ffc107 !important;
        }

        footer {
            text-align: center;
            padding: 10px;
            color: #bbb;
        }

            footer span {
                color: #ffc107;
                font-weight: 600;
            }

            footer em {
                display: block;
                margin-top: 5px;
                color: #ffda47;
                font-style: italic;
            }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EMS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container pb-3">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        © 2025 <span>EMS</span> — Made by <span>Syed Murtaza Hassan Rizvi ⚡</span>
        <em>"Powered by Energy & Innovation"</em>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
