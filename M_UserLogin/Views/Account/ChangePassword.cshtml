@model M_UserLogin.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container text-center mt-5">
    <div class="card shadow-lg p-4 mx-auto" style="max-width: 480px; background-color: #1e1e1e; color: #f1f1f1; border-radius: 15px;">
        <h2 class="mb-3 text-success">🔑 Change Your Password</h2>
        <p class="text-muted">Enter your email, secret code, and new password below.</p>

        <form asp-action="ChangePassword" method="post">
            <div class="form-group mb-3 text-start">
                <label asp-for="Email" class="form-label fw-bold">📧 Email Address</label>
                <input asp-for="Email" class="form-control" readonly style="background-color:#2c2c2c; color:white; border:none;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 text-start">
                <label asp-for="SecretCode" class="form-label fw-bold">🧩 Secret Code</label>
                <input asp-for="SecretCode" class="form-control" style="background-color:#2c2c2c; color:white; border:none;" placeholder="Enter your secret code" />
                <span asp-validation-for="SecretCode" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 text-start">
                <label asp-for="NewPassword" class="form-label fw-bold">🔒 New Password</label>
                <input asp-for="NewPassword" type="password" class="form-control" style="background-color:#2c2c2c; color:white; border:none;" placeholder="Enter new password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100 fw-bold mt-3">Update Password ✅</button>
        </form>

        <div class="mt-4">
            <a asp-controller="Account" asp-action="Login" class="text-decoration-none text-warning fw-bold">⬅️ Back to Login</a>
        </div>
    </div>

    
</div>
