@model M_UserLogin.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container text-center mt-5">
    <div class="card shadow-lg p-4 mx-auto" style="max-width: 450px; background-color: #1e1e1e; color: #f1f1f1; border-radius: 15px;">
        <h2 class="mb-3 text-warning">🔑 Login</h2>
        <p class="text-muted">Access your account securely using your credentials.</p>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3 text-start">
                <label asp-for="Email" class="form-label fw-bold">📧 Email Address</label>
                <input asp-for="Email" class="form-control" style="background-color:#2c2c2c; color:white; border:none;" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 text-start">
                <label asp-for="Password" class="form-label fw-bold">🔒 Password</label>
                <input asp-for="Password" type="password" class="form-control" style="background-color:#2c2c2c; color:white; border:none;" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check text-start mb-3">
                <input asp-for="RememberMe" class="form-check-input" id="rememberMe" />
                <label class="form-check-label" for="rememberMe">Remember Me</label>
            </div>

            <button type="submit" class="btn btn-warning w-100 fw-bold">Login 🚀</button>

            <div class="mt-4 text-center">
                <a asp-action="VerifyEmail" class="text-decoration-none text-info fw-bold">Forgot Password?</a> |
                <a asp-action="Register" class="text-decoration-none text-success fw-bold">Register</a>
            </div>
        </form>
    </div>

    
</div>
