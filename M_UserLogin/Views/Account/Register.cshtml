@model M_UserLogin.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container text-center mt-5">
    <div class="card shadow-lg p-4 mx-auto" style="max-width: 480px; background-color: #1e1e1e; color: #f1f1f1; border-radius: 15px;">
        <h2 class="mb-3 text-success">🧾 Register</h2>
        <p class="text-muted">Create your account to access the EMS Portal.</p>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3 text-start">
                <label asp-for="Name" class="form-label fw-bold">👤 Full Name</label>
                <input asp-for="Name" class="form-control" style="background-color:#2c2c2c; color:white; border:none;" placeholder="Enter your full name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 text-start">
                <label asp-for="Email" class="form-label fw-bold">📧 Email Address</label>
                <input asp-for="Email" class="form-control" style="background-color:#2c2c2c; color:white; border:none;" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 text-start">
                <label asp-for="Password" class="form-label fw-bold">🔒 Password</label>
                <input asp-for="Password" type="password" class="form-control" style="background-color:#2c2c2c; color:white; border:none;" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 text-start">
                <label asp-for="ConfirmPassword" class="form-label fw-bold">✅ Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" style="background-color:#2c2c2c; color:white; border:none;" placeholder="Re-enter your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 text-start">
                <label asp-for="SecretCode" class="form-label fw-bold">🧩 Secret Code</label>
                <input asp-for="SecretCode" class="form-control" style="background-color:#2c2c2c; color:white; border:none;" placeholder="Enter your secret recovery code" />
                <span asp-validation-for="SecretCode" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100 fw-bold mt-2">Create Account 🚀</button>

            <div class="mt-4 text-center">
                <a asp-action="Login" class="text-decoration-none text-warning fw-bold">Already have an account? Login</a>
            </div>
        </form>
    </div>
</div>
