@model M_UserLogin.ViewModels.VerifyEmailViewModel
@{
    ViewData["Title"] = "Verify Email";
}

<div class="container text-center mt-5">
    <div class="card shadow-lg p-4 mx-auto" style="max-width: 450px; background-color: #1e1e1e; color: #f1f1f1; border-radius: 15px;">
        <h2 class="mb-3 text-info">🔐 Verify Your Email</h2>
        <p class="text-muted">Enter your registered email to verify your account and reset password.</p>

        <form asp-action="VerifyEmail" method="post">
            <div class="form-group mb-3 text-start">
                <label asp-for="Email" class="form-label fw-bold">📧 Email Address</label>
                <input asp-for="Email" class="form-control" style="background-color:#2c2c2c; color:white; border:none;" placeholder="Enter your registered email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-info w-100 fw-bold mt-3">Next ➡️</button>
        </form>

        <div class="mt-4">
            <a asp-controller="Account" asp-action="Login" class="text-decoration-none text-warning fw-bold">⬅️ Back to Login</a>
        </div>
    </div>

    
</div>
