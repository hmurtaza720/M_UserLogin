@model IEnumerable<M_UserLogin.Models.AttendanceRecord>
@{
    ViewData["Title"] = "My Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4" style="background:#111; color:white; border:1px solid #ffc107;">
        <h3 class="text-warning text-center mb-4">📅 My Attendance History</h3>

        <table class="table table-dark table-striped text-center">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Check-In</th>
                    <th>Check-Out</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var record in Model)
                {
                    <tr>
                        <td>@record.Date.ToShortDateString()</td>
                        <td>@(record.CheckInTime?.ToShortTimeString() ?? "-")</td>
                        <td>@(record.CheckOutTime?.ToShortTimeString() ?? "-")</td>
                        <td>
                            @if (record.Status == "Present")
                            { <span class="badge bg-success">Present</span> }
                            else
                            { <span class="badge bg-danger">Absent</span> }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a asp-action="Mark" class="btn btn-warning">🕒 Mark Attendance</a>
        </div>
    </div>
</div>
