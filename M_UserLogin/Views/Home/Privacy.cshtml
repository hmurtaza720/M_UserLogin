@model M_UserLogin.Models.Users
@using Microsoft.AspNetCore.Identity
@inject UserManager<M_UserLogin.Models.Users> UserManager

@{
    ViewData["Title"] = "Profile Summary";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2>👤 Profile Summary</h2>
        <p class="text-muted">Here’s your account information.</p>
    </div>

    <div class="card shadow-sm border-0 mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <div class="text-center mb-3">
                <div class="rounded-circle bg-primary text-white d-inline-flex justify-content-center align-items-center" 
                     style="width: 80px; height: 80px; font-size: 2rem;">
                    @Model.FullName?.Substring(0,1).ToUpper()
                </div>
                <h4 class="mt-3">@Model.FullName</h4>
                <p class="text-muted">@Model.Email</p>
            </div>

            <hr />

            <dl class="row">
                <dt class="col-sm-4">📧 Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">🆔 User ID</dt>
                <dd class="col-sm-8">@Model.Id</dd>

                <dt class="col-sm-4">🧩 Role</dt>
                <dd class="col-sm-8">
                    @{
                        var roles = await UserManager.GetRolesAsync(Model);
                        if (roles != null && roles.Any())
                        {
                            <span class="badge bg-success">@roles.First()</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">User</span>
                        }
                    }
                </dd>
            </dl>

            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-sm">⬅ Back to Dashboard</a>
                <a asp-controller="Account" asp-action="ChangePassword" asp-route-username="@Model.Email" 
                   class="btn btn-outline-warning btn-sm">Change Password</a>
            </div>
        </div>
    </div>
</div>
