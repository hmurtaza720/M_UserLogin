@model M_UserLogin.Models.Users
@using Microsoft.AspNetCore.Identity
@inject UserManager<M_UserLogin.Models.Users> UserManager

@{
    ViewData["Title"] = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #1e1e2f, #252540, #12121c);
        color: #f0f0f0;
        font-family: 'Segoe UI', sans-serif;
        min-height: 100vh;
    }

    .welcome-container {
        max-width: 100%;
        padding: 30px 50px;
    }

    h2 {
        color: #fff;
        font-weight: 600;
        margin-bottom: 5px;
        text-align: center;
    }

    .text-muted {
        color: #d1d1d1;
        margin-bottom: 30px;
        text-align: center;
    }

    .dashboard-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    .card {
        background: rgba(255, 255, 255, 0.05);
        border: none;
        color: #fff;
        border-radius: 12px;
        padding: 20px;
        flex: 1 1 calc(33.333% - 20px);
        min-width: 250px;
        transition: 0.3s;
    }

    .card:hover {
        transform: translateY(-5px);
        background: rgba(255, 255, 255, 0.15);
    }

    .card h5 {
        color: #ffc107;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .card p {
        font-size: 0.85rem;
        line-height: 1.4;
    }

    .btn-group {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 30px;
        flex-wrap: wrap;
    }

    .btn-warning {
        background-color: #ffc107;
        color: #000;
        font-weight: 600;
        border: none;
        padding: 10px 25px;
        border-radius: 25px;
        transition: 0.3s;
    }

    .btn-warning:hover {
        background-color: #ffca2c;
        transform: translateY(-2px);
    }

    .btn-outline-light {
        border-color: #ffc107;
        color: #ffc107;
        font-weight: 500;
        padding: 10px 25px;
        border-radius: 25px;
    }

    .btn-outline-light:hover {
        background: #ffc107;
        color: #000;
    }

    footer {
        text-align: center;
        color: #999;
        margin-top: 40px;
        font-size: 0.9rem;
    }

    media (max-width: 992px) {
        .card {
            flex: 1 1 calc(50% - 20px);
        }
    }

    media (max-width: 600px) {
        .card {
            flex: 1 1 100%;
        }
    }
</style>

<div class="welcome-container">
    <h2>👋 Welcome to EMS</h2>
    <p class="text-muted">Explore the main features of your EMS Portal</p>

    <div class="dashboard-grid">
        <div class="card">
            <h5>🕒 Attendance Management</h5>
            <p>Employees can mark attendance. Admins can view all employee records and statuses. Users can see their daily attendance history.</p>
        </div>

        <div class="card">
            <h5>📅 Leave Management</h5>
            <p>Employees can apply for leave and check status. Admins can approve/reject requests through the dashboard.</p>
        </div>

        <div class="card">
            <h5>⚙️ User & Role Management</h5>
            <p>Admins can register users, assign roles, manage permissions, and delete accounts.</p>
        </div>

        <div class="card">
            <h5>📊 Data Insights & Analytics</h5>
            <p>Admins get dashboards with metrics like total users, role distribution, user growth over time, and daily check-ins.</p>
        </div>

        <div class="card">
            <h5>🧑 Personalized Dashboards</h5>
            <p>Admins see controls for managing attendance, leave requests, and dashboard settings. Regular users have options for attendance and leave tracking.</p>
        </div>

        <div class="card">
            <h5>🔒 Secure Authentication</h5>
            <p>Secure login and registration, password recovery via secret code, and email verification for account security.</p>
        </div>
    </div>

    <div class="btn-group">
        <a asp-controller="Account" asp-action="Login" class="btn btn-warning">🔑 Login</a>
        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light">🧾 Register</a>
    </div>

    <footer>© 2025 <span class="text-warning">EMS</span> — Powered by ASP.NET Core MVC</footer>
</div>
