@model M_UserLogin.Models.Users
@using Microsoft.AspNetCore.Identity
@inject UserManager<M_UserLogin.Models.Users> UserManager

@{
    ViewData["Title"] = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #1e1e2f, #252540, #12121c);
        color: #f0f0f0;
        font-family: 'Segoe UI', sans-serif;
        min-height: 100vh;
        position: relative;
        overflow-x: hidden;
    }

    .welcome-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 30px 20px 100px 20px; /* extra bottom padding so footer doesn't overlap buttons */
        text-align: center;
        position: relative;
        z-index: 2;
    }

    h2 {
        color: #00d4ff;
        font-weight: 700;
        margin-bottom: 10px;
        text-shadow: 0 0 8px #00d4ff;
    }

    .text-muted {
        color: #999;
        margin-bottom: 30px;
        font-size: 1.1rem;
    }

    .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        justify-items: center;
        margin-bottom: 40px;
    }

    .card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 16px;
        padding: 25px 20px;
        width: 100%;
        max-width: 350px;
        transition: 0.3s;
        text-align: left;
        box-shadow: 0 0 15px rgba(0,212,255,0.2);
    }

    .card:hover {
        transform: translateY(-5px);
        background: rgba(0,212,255,0.1);
        box-shadow: 0 0 25px rgba(0,212,255,0.5);
    }

    .card h5 {
        color: #ffc107;
        font-weight: 600;
        margin-bottom: 12px;
        text-shadow: 0 0 5px #ffc107;
    }

    .card p {
        font-size: 0.9rem;
        line-height: 1.5;
    }

    .btn-group {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
        flex-wrap: wrap;
        z-index: 5;
        position: relative;
    }

    .btn-warning, .btn-outline-light {
        padding: 12px 28px;
        font-weight: 600;
        border-radius: 25px;
        cursor: pointer;
        text-decoration: none;
        font-size: 1rem;
    }

    .btn-warning {
        background-color: #ffc107;
        color: #000;
        border: none;
        transition: 0.3s;
    }

    .btn-warning:hover {
        background-color: #ffca2c;
        transform: translateY(-2px);
    }

    .btn-outline-light {
        background: none;
        border: 2px solid #ffc107;
        color: #ffc107;
        transition: 0.3s;
    }

    .btn-outline-light:hover {
        background: #ffc107;
        color: #000;
    }

    footer {
        position: relative;
        bottom: 0;
        left: 0;
        width: 100%;
        margin-top: 50px;
        font-size: 0.95rem;
        color: #888;
        text-align: center;
        padding: 15px 0;
        z-index: 1;
    }

    footer .creator {
        font-family: 'Courier New', monospace;
        color: #00d4ff;
        text-shadow: 0 0 10px #00d4ff;
        font-weight: 700;
        margin-top: 5px;
    }

    media (max-width: 992px) {
        .dashboard-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    media (max-width: 600px) {
        .dashboard-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="welcome-container">
    <h2>👋 Welcome to EMS</h2>
    <p class="text-muted">Explore the main features of your EMS Portal</p>

    <div class="dashboard-grid">
        <div class="card">
            <h5>🕒 Attendance Management</h5>
            <p>Employees can mark attendance. Admins can view all employee records and statuses. Users can see their daily attendance history.</p>
        </div>

        <div class="card">
            <h5>📅 Leave Management</h5>
            <p>Employees can apply for leave and check status. Admins can approve/reject requests through the dashboard.</p>
        </div>

        <div class="card">
            <h5>⚙️ User & Role Management</h5>
            <p>Admins can register users, assign roles, manage permissions, and delete accounts.</p>
        </div>

        <div class="card">
            <h5>📊 Data Insights & Analytics</h5>
            <p>Admins get dashboards with metrics like total users, role distribution, user growth over time, and daily check-ins.</p>
        </div>

        <div class="card">
            <h5>🧑 Personalized Dashboards</h5>
            <p>Admins see controls for managing attendance, leave requests, and dashboard settings. Regular users have options for attendance and leave tracking.</p>
        </div>

        <div class="card">
            <h5>🔒 Secure Authentication</h5>
            <p>Secure login and registration, password recovery via secret code, and email verification for account security.</p>
        </div>
    </div>

    <div class="btn-group">
        <a asp-controller="Account" asp-action="Login" class="btn btn-warning">🔑 Login</a>
        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light">🧾 Register</a>
    </div>
</div>


