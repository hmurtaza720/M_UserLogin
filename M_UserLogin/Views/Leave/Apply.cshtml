@model M_UserLogin.Models.LeaveRequest
@{
    ViewData["Title"] = "Apply Leave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4" style="background-color:#111; color:white; border:1px solid #ffc107;">
        <h3 class="text-warning text-center mb-4">📝 Apply for Leave</h3>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger text-center">@TempData["Error"]</div>
        }
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success text-center">@TempData["Message"]</div>
        }

        <div class="mb-4 text-center">
            <h5>🟡 Casual Leave: @ViewBag.CasualLeave</h5>
            <h5>🔵 Sick Leave: @ViewBag.SickLeave</h5>
            <h5>🟢 Annual Leave: @ViewBag.AnnualLeave</h5>
        </div>

        <form asp-action="Apply" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label asp-for="LeaveType" class="form-label">Leave Type</label>
                <select asp-for="LeaveType" class="form-select" required>
                    <option value="">-- Select Leave Type --</option>
                    <option>Casual Leave</option>
                    <option>Sick Leave</option>
                    <option>Annual Leave</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="StartDate" class="form-label">Start Date</label>
                <input asp-for="StartDate" class="form-control" type="date" required />
            </div>
            <div class="mb-3">
                <label asp-for="EndDate" class="form-label">End Date</label>
                <input asp-for="EndDate" class="form-control" type="date" required />
            </div>
            <div class="mb-3">
                <label asp-for="Reason" class="form-label">Reason</label>
                <textarea asp-for="Reason" class="form-control" rows="3" required></textarea>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-warning fw-bold">Submit Leave Request</button>
            </div>
        </form>
    </div>
</div>
